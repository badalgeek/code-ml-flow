<!-- templates/repo_list.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Repository List</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .add-btn {
            display: inline-block;
            padding: 5px 10px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <h1>Repositories</h1>
    <table>
        <thead>
            <tr>
                <th>Repository Name</th>
                <th>Git Repo Link</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for repo in repositories %}
                <tr>
                    <td>
                        {{ repo.full_name }}
                    </td>
                    <td>
                        <a href="{{ repo.url }}" target="_blank">Git Link</a>
                    </td>
                    <td>
                        {% if repo.in_db %}
                            <span>N/A</span>
                        {% else %}
                            <a href="/repo/add_repo?git_account_id={{ git_account_id }}&repo_name={{ repo.full_name }}" class="add-btn">Add</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>